@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<section class="bg0 p-t-120 p-b-80">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <partial name="_StatusMessage" for="StatusMessage" />    
                <hr>
                <form id="profile-form" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="col-md-12">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" disabled />
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Input.Name" class="form-label"></label>
                        <input asp-for="Input.Name" class="form-control" />
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Input.DOB" class="form-label"></label>
                        <input asp-for="Input.DOB" class="form-control" />
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Input.Address" class="form-lable"></label>
                        <input asp-for="Input.Address" class="form-control" />
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />

                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <hr>
                    <div class="col-md-12">
                        <label asp-for="Input.ProfilePicture" style="width: 100%;"></label>
                        @if (Model.Input.ProfilePicture != null)
                        {
                            <img id="profilePicture" style="width:350px;height:350px; object-fit:cover"
                                src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                        }
                        else
                        {
                            <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="">
                        }
                        <input type="file" accept=".png,.jpg,.jpeg,.gif,.tif" asp-for="Input.ProfilePicture"
                            class="form-control"
                            style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                            onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-secondary">Save</button>

                </form>
            </div>
        </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
