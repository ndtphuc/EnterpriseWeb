@model IEnumerable<EnterpriseWeb.Models.Comment>

@{
    ViewData["Title"] = "Commented";
}
<section class="bg0 p-t-120 p-b-80">
    <div class="container">
        <div class="row p-b-20">
            <div class="col-lg-12 col-xl-12 m-lr-auto m-b-50">
                <div class="m-l-20 m-r-20 m-lr-0-xl">
                    <div class="flex-w flex-t p-b-13">
                        <div class="size-208">
                            <h3 class="mtext-109 cl2 p-b-30">
                                My comment list
                            </h3>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CommentText)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubmitDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdeaUser.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Idea.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" >@Html.DisplayFor(modelItem => item.CommentText)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubmitDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdeaUser.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Idea.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.status)
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id"><span
                                                class="material-symbols-outlined">
                                                pageview
                                            </span></a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a href ="/Identity/Account/Manage" type="button" class="btn btn-secondary" >Back to List</a>
            </div>
        </div>
    </div>
</section>
